{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "vortex",
  "version": "0.5.1",
  "maintainers": "Mark Draelos <contact@vortex-oct.dev>",
  "description": "An open-source library for building real-time OCT engines in C++ or Python",
  "homepage": "https://www.vortex-oct.dev/",
  "documentation": "https://www.vortex-oct.dev/rel/v0.5.1/doc/",
  "license": "BSD-3-Clause",
  "supports": "(windows | linux) & x64",
  "dependencies": [
    "fmt",
    "spdlog",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    {
      "name": "xtensor",
      "features": [
        "tbb",
        "xsimd"
      ]
    }
  ],
  "default-features": [
    "asio",
    "backward",
    "cuda",
    "fftw",
    "reflexxes"
  ],
  "features": {
    "alazar": {
      "description": "Alazar digitizer support through ATS-SDK"
    },
    "alazar-dac": {
      "description": "Alazar DAC module support"
    },
    "alazar-gpu": {
      "description": "Alazar digitizer support through ATS-GPU"
    },
    "asio": {
      "description": "network and serial interfaces",
      "dependencies": [
        "asio"
      ]
    },
    "backward": {
      "description": "exception stack traces",
      "dependencies": [
        "backward"
      ]
    },
    "cuda": {
      "description": "CUDA OCT processor and engine support",
      "dependencies": [
        "cuda"
      ]
    },
    "daqmx": {
      "description": "NI DAQmx support"
    },
    "fftw": {
      "description": "CPU OCT processor",
      "dependencies": [
        {
          "name": "fftw3",
          "features": [
            "avx2"
          ]
        }
      ]
    },
    "hdf5": {
      "description": "HDF5 save format",
      "dependencies": [
        {
          "name": "hdf5",
          "default-features": false,
          "features": [
            "cpp"
          ]
        }
      ]
    },
    "imaq": {
      "description": "NI IMAQdx camera support"
    },
    "python": {
      "description": "Python bindings",
      "dependencies": [
        "pybind11",
        "xtensor-python"
      ]
    },
    "reflexxes": {
      "description": "scan pattern optimizer",
      "dependencies": [
        "reflexxes"
      ]
    },
    "teledyne": {
      "description": "Teledyne ADQ digitizer support"
    }
  },
  "overrides": [
    {
      "name": "fmt",
      "version": "10.2.1#2"
    },
    {
      "name": "spdlog",
      "version": "1.14.1"
    }
  ]
}
